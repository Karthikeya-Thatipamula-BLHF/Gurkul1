# ========================================
# GURUKUL PLATFORM - PRODUCTION ENVIRONMENT TEMPLATE
# ========================================
# Copy this file to .env and fill in your production values
# DO NOT commit .env files to version control

# ========================================
# PRODUCTION ENVIRONMENT SETTINGS
# ========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ========================================
# API KEYS - AI/LLM SERVICES
# ========================================
# Get these from respective providers
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_ENDPOINT=https://api.groq.com
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY_BACKUP=your_backup_gemini_api_key_here
LLAMA_API_KEY=your_llama_api_key_here
AGENTOPS_API_KEY=your_agentops_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Production MongoDB (MongoDB Atlas recommended)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gurukul?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/gurukul?retryWrites=true&w=majority

# Docker MongoDB (if using docker-compose)
MONGODB_URL=mongodb://mongodb:27017/
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=generate_secure_password_here

# Database Names
MEMORY_DB_NAME=gurukul
MONGODB_DATABASE=agent_memory
CHATBOT_DB_NAME=gurukul_chatbot

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=generate_secure_redis_password_here
REDIS_URL=redis://:your_redis_password@redis:6379

# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Generate secure random keys (minimum 32 characters)
JWT_SECRET=generate_secure_jwt_secret_minimum_32_characters
ENCRYPTION_KEY=generate_secure_encryption_key_minimum_32_characters
SECRET_KEY=generate_secure_secret_key_for_sessions

# ========================================
# SERVICE PORTS CONFIGURATION
# ========================================
HOST=0.0.0.0
PORT=8000
BASE_BACKEND_PORT=8000
API_DATA_PORT=8001
FINANCIAL_SIMULATOR_PORT=8002
MEMORY_MANAGEMENT_PORT=8003
AKASH_SERVICE_PORT=8004
SUBJECT_GENERATION_PORT=8005
WELLNESS_API_PORT=8006
TTS_SERVICE_PORT=8007

# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================
VITE_API_BASE_URL=https://your-api-domain.com
VITE_CHAT_API_BASE_URL=https://your-api-domain.com/chat-api
VITE_FINANCIAL_API_BASE_URL=https://your-api-domain.com/financial-api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# EXTERNAL API KEYS
# ========================================
OPENCAGE_API_KEY=your_opencage_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
VISION_API_KEY=your_vision_api_key_here

# ========================================
# APPLICATION SETTINGS
# ========================================
MAX_RETRIES=3
TIMEOUT_SECONDS=30
TTS_ENABLED=true
ORCHESTRATION_ENABLED=true
ORCHESTRATION_FALLBACK_ENABLED=true

# ========================================
# MEMORY MANAGEMENT CONFIGURATION
# ========================================
MEMORY_API_KEYS=memory_api_key_prod:production_user
MEMORY_RETENTION_DAYS=365
MEMORY_RATE_LIMIT_REQUESTS=1000
MEMORY_RATE_LIMIT_WINDOW=3600
MEMORY_MAX_SIZE_MB=100
MEMORY_CACHE_TTL=300

# ========================================
# MONITORING AND HEALTH CHECKS
# ========================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=100
