# ========================================
# GURUKUL PLATFORM - RENDER.COM ENVIRONMENT TEMPLATE
# ========================================
# Copy these environment variables to your Render.com dashboard
# DO NOT commit this file with actual values

# ========================================
# PRODUCTION SETTINGS
# ========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
PORT=8000
ALLOWED_ORIGINS=https://gurukul-frontend.onrender.com

# ========================================
# AI/LLM API KEYS (Set in Render Dashboard)
# ========================================
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
LLAMA_API_KEY=your_llama_api_key_here
AGENTOPS_API_KEY=your_agentops_api_key_here

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gurukul?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/gurukul?retryWrites=true&w=majority
MEMORY_DB_NAME=gurukul
MONGODB_DATABASE=agent_memory
CHATBOT_DB_NAME=gurukul_chatbot

# Redis (Use Render Redis add-on)
REDIS_URL=redis://red-xxxxx:6379
REDIS_HOST=red-xxxxx.render.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# ========================================
# SECURITY KEYS (Auto-generated by Render)
# ========================================
JWT_SECRET=auto_generated_by_render
ENCRYPTION_KEY=auto_generated_by_render
SECRET_KEY=auto_generated_by_render

# ========================================
# EXTERNAL API KEYS
# ========================================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
OPENCAGE_API_KEY=your_opencage_key
OPENWEATHER_API_KEY=your_openweather_key
VISION_API_KEY=your_vision_api_key

# ========================================
# SERVICE CONFIGURATION
# ========================================
MAX_RETRIES=3
TIMEOUT_SECONDS=30
TTS_ENABLED=true
ORCHESTRATION_ENABLED=true

# Memory Management
MEMORY_RETENTION_DAYS=365
MEMORY_RATE_LIMIT_REQUESTS=1000
MEMORY_RATE_LIMIT_WINDOW=3600
MEMORY_MAX_SIZE_MB=100
MEMORY_CACHE_TTL=300

# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================
VITE_API_BASE_URL=https://gurukul-backend.onrender.com
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
