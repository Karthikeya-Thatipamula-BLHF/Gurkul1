# ========================================
# GURUKUL FRONTEND - PRODUCTION ENVIRONMENT TEMPLATE
# ========================================
# Copy this file to .env.production and update the values

# Build Environment
NODE_ENV=production
VITE_NODE_ENV=production

# API Configuration - REPLACE WITH YOUR PRODUCTION URLS
VITE_API_BASE_URL=https://your-api-domain.com
VITE_CHAT_API_BASE_URL=https://your-api-domain.com/chat-api
VITE_FINANCIAL_API_BASE_URL=https://your-api-domain.com/financial-api
VITE_MEMORY_API_BASE_URL=https://your-api-domain.com/memory-api
VITE_AKASH_API_BASE_URL=https://your-api-domain.com/akash-api
VITE_SUBJECT_API_BASE_URL=https://your-api-domain.com/subjects-api
VITE_KARTHIKEYA_API_BASE_URL=https://your-api-domain.com/karthikeya-api
VITE_TTS_API_BASE_URL=https://your-api-domain.com/tts-api

# Supabase Configuration - REPLACE WITH YOUR PRODUCTION SUPABASE
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_DEV_TOOLS=false

# Application Configuration
VITE_APP_NAME=Gurukul Learning Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Comprehensive Learning Platform

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# External Services (Optional - Add your API keys if needed)
VITE_MESHY_API_KEY=your_meshy_api_key_here
VITE_TRIPO_API_KEY=your_tripo_api_key_here
VITE_STABILITY_API_KEY=your_stability_api_key_here

# Monitoring and Analytics (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_HOTJAR_ID=your_hotjar_id_here

# CDN Configuration (Optional)
VITE_CDN_URL=your_cdn_url_here
VITE_ASSETS_URL=your_assets_url_here
