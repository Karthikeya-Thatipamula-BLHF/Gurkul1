# Gurukul Frontend Environment Variables
# Copy this file to .env.local for local development
# For production, set these in Vercel dashboard

# Backend API URLs (Update these with your Render deployment URLs)
VITE_BASE_API_URL=https://your-render-app.onrender.com/api/v1/base
VITE_CHAT_API_URL=https://your-render-app.onrender.com/api/v1/base
VITE_FINANCIAL_API_URL=https://your-render-app.onrender.com/api/v1/financial
VITE_MEMORY_API_URL=https://your-render-app.onrender.com/api/v1/memory
VITE_AKASH_API_URL=https://your-render-app.onrender.com/api/v1/akash
VITE_SUBJECT_API_URL=https://your-render-app.onrender.com/api/v1/subjects
VITE_KARTHIKEYA_API_URL=https://your-render-app.onrender.com/api/v1/base
VITE_TTS_API_URL=https://your-render-app.onrender.com/api/v1/tts

# Application Configuration
VITE_APP_NAME=Gurukul Learning Platform
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_TTS=true
VITE_ENABLE_FINANCIAL_SIMULATOR=true
VITE_ENABLE_MEMORY_MANAGEMENT=true

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=
